<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ContactActivity">

    <include
        layout="@layout/back_button" />

    <LinearLayout
        android:id="@+id/button_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/button_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_unit_title"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/border_blue_selected"
            android:onClick="showUnits" />

        <TextView
            android:id="@+id/button_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/staff_text_title"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/border_blue"
            android:onClick="showStaffs"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>